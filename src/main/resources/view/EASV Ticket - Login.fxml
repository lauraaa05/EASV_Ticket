<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Log in" textAlignment="CENTER">
         <font>
            <Font size="48.0" />
         </font>
         <VBox.margin>
            <Insets bottom="70.0" />
         </VBox.margin>
      </Text>
      <Button fx:id="testButton" mnemonicParsing="false" text="Test Button" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Text>
      <TextField fx:id="usernameField" maxHeight="25.0" maxWidth="200.0" prefHeight="25.0" prefWidth="30.0" promptText="Username..." />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" top="30.0" />
         </VBox.margin>
      </Text>
      <AnchorPane maxHeight="25.0" maxWidth="201.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="201.0">
         <children>
            <PasswordField fx:id="passwordField" layoutX="1.0" maxHeight="25.0" maxWidth="200.0" prefHeight="25.0" prefWidth="200.0" promptText="Password..." />
            <TextField fx:id="visiblePasswordField" layoutX="2.0" maxHeight="25.0" maxWidth="200.0" prefHeight="25.0" prefWidth="200.0" promptText="Password..." visible="false" />
         </children>
      </AnchorPane>
      <CheckBox fx:id="showPasswordCheckBox" mnemonicParsing="false" text="Show Password" />
      <Button fx:id="loginButton" mnemonicParsing="false" text="Login">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
